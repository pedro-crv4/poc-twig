              <path clip-rule="evenodd" d="M0 .758C0 .326.347 0 .79 0c.444 0 .79.326.79.758 0 .407-.344.758-.79.758-.445 0-.79-.35-.79-.758zM.79.141C.418.14.14.41.14.758c0 .326.28.617.65.617.371 0 .65-.29.65-.617C1.44.41 1.163.141.79.141zm2.605.617c0-.432.346-.758.79-.758h9.225c.443 0 .79.326.79.758 0 .407-.345.758-.79.758H4.185c-.445 0-.79-.35-.79-.758zm.79-.617c-.372 0-.65.27-.65.617 0 .326.28.617.65.617.371 0 .65-.291.65-.617 0-.348-.278-.617-.65-.617zm3.395.617c0-.432.346-.758.79-.758h9.225c.443 0 .79.326.79.758 0 .407-.345.758-.79.758H7.58c-.445 0-.79-.35-.79-.758zm.79-.617c-.372 0-.65.27-.65.617 0 .326.28.617.65.617.371 0 .65-.291.65-.617 0-.348-.278-.617-.65-.617zm3.395.617c0-.432.346-.758.79-.758h2.89c.443 0 .79.326.79.758 0 .407-.345.758-.79.758h-2.89c-.445 0-.79-.35-.79-.758zm.79-.617c-.372 0-.65.27-.65.617 0 .326.28.617.65.617.371 0 .65-.291.65-.617 0-.348-.278-.617-.65-.617z" />
            </svg>
          </span>
        </li>

        {% for category in categories %}
          <li>
            <a href="/{{ category.slug }}">{{ category.name }}</a>

            {% if category.children.size > 0 %}
              <ul class="subcategories">
                {% for subcategory in category.children %}
                  <li>
                    <a href="/{{ category.slug }}/{{ subcategory.slug }}">{{ subcategory.name }}</a>


                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}


      </ul>
    </div>
  </div>
</section>
