<section class="section-header" id="section-header">
    <link rel="stylesheet" href="{{ 'header.css' | asset_url }}">

  <span>Atendimento: </span>
  {{ company.phone.formated_number }}

  <div class="header-topbar">
    <div class="container flex -between">
      <div class="header-topbar_contact flex">
        <a href="/">Home</a>
      </div>
    </div>
  </div>

  <div class="container flex-between">
    <div class="logo">
      {% if company.logo_url %}
      <a href="/" class="inline-block">
        <img src="{{ company.logo_url }}" alt="{{ company.razao_social }}" width="auto" height="auto" />
      </a>
      {% endif %}
    </div>

    <div class="categories">
      <ul class="inline">
        <li class="dropdown-holder category-dropdown-holder">
          <span class="padding block">
            <svg width="15" height="11" fill="none" viewBox="0 0 15 11">
